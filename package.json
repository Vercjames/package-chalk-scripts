{
  "name": "chalk-scripts",
  "private": true,
  "scripts": {
    "dev": "yarn build:chalk-scripts && turbo run dev --filter=with-express",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run lint -- --fix",
    "check-types": "turbo run check-types",
    "dev:express": "turbo run dev --filter=with-express",
    "build:chalk-scripts": "turbo run build --filter=chalk-scripts",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}

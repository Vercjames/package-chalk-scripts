{
  "name": "chalk-scripts",
  "version": "2.0.0-rc.1",
  "description": "A simple logging package with chalk styling",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "files": [
    "build/**"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --out-dir build --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir build",
    "lint": "eslint src/**/*.ts",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "logging",
    "chalk",
    "console",
    "colors"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@repo/config-eslint": "*",
    "@repo/config-typescript": "*",
    "tsup": "^8.0.2",
    "typescript": "^5.9.2",
    "eslint": "^9.33.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "chalk-scripts",
  "version": "1.0.0",
  "description": "A simple logging package with chalk styling",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "logging",
    "chalk",
    "console",
    "colors"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "tsup": "^8.0.2",
    "typescript": "^5.9.2",
    "eslint": "^8.57.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
